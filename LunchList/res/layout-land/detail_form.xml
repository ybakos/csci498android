<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

	<TableLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:stretchColumns="3"
	    android:shrinkColumns="3">
       	<TableRow>
       	    <TextView android:text="@string/nameFieldLabel" />
        	<EditText android:id="@+id/name" android:hint="@string/nameFieldHint" android:layout_span="3" />
       	</TableRow>
	    <TableRow>
	        <TextView
	            android:id="@+id/textView2"
	            android:textColor="#AA6666"
	    		android:typeface="monospace"
	            android:text="@string/addressFieldLabel" />
	        <AutoCompleteTextView android:id="@+id/address"
		        android:singleLine="true" android:layout_span="3" />
	    </TableRow>
	    <TableRow>
	        <TextView
	            android:id="@+id/textView3"
	            android:text="@string/typeFieldLabel" />
	        <RadioGroup android:id="@+id/restaurantTypes">
	            <RadioButton
	                android:id="@+id/take_out"
	                android:checked="true"
	                android:text="@string/restaurantType01" />
	            <RadioButton
	                android:id="@+id/sit_down"
	                android:text="@string/restaurantType02" />
	            <RadioButton
	                android:id="@+id/delivery"
	                android:text="@string/restaurantType03" />
	        </RadioGroup>
	        <TextView android:text="Notes:" />
			<LinearLayout android:orientation="vertical">
	        	<EditText android:id="@+id/notes"
	            	android:inputType="textMultiLine"
	            	android:gravity="top"
	            	android:lines="2"
	            	android:scrollHorizontally="false"
	            	android:maxLines="2"
	            	android:layout_width="match_parent"
	            	android:layout_height="wrap_content" />
	        	<Button android:id="@+id/save"
	        		android:layout_width="match_parent"
	        		android:layout_height="wrap_content"
	        		android:text="@string/saveButtonLabel" />
	        </LinearLayout>
	    </TableRow>
    </TableLayout>
</ScrollView>