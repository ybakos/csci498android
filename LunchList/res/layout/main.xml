<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@android:id/tabhost"
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TabWidget android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <FrameLayout android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView android:id="@+id/restaurants"
	    		android:layout_width="match_parent"
	   		 	android:layout_height="wrap_content" />
            <ScrollView android:id="@+id/details" android:layout_width="match_parent" android:layout_height="match_parent">
				<TableLayout 
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:paddingTop="4dip"
				    android:stretchColumns="1"
				    android:shrinkColumns="1">
		        	<TableRow>
		        	    <TextView android:text="@string/nameFieldLabel" />
			        	<EditText android:id="@+id/name" android:hint="@string/nameFieldHint" />
		        	</TableRow>
				    <TableRow>
				        <TextView
				            android:id="@+id/textView2"
				            android:textColor="#AA6666"
				    		android:typeface="monospace"
				            android:text="@string/addressFieldLabel" />
				        <AutoCompleteTextView android:id="@+id/address"
					        android:singleLine="true" />
				    </TableRow>
				    <TableRow>
				        <TextView
				            android:id="@+id/textView3"
				            android:text="@string/typeFieldLabel" />
				        <RadioGroup android:id="@+id/restaurantTypes">
				            <RadioButton
				                android:id="@+id/take_out"
				                android:checked="true"
				                android:text="@string/restaurantType01" />
				            <RadioButton
				                android:id="@+id/sit_down"
				                android:text="@string/restaurantType02" />
				            <RadioButton
				                android:id="@+id/delivery"
				                android:text="@string/restaurantType03" />
				        </RadioGroup>
				    </TableRow>
				    <TableRow>
				        <TextView android:text="Notes:" />
				        <EditText android:id="@+id/notes"
				            android:singleLine="false"
				            android:gravity="top"
				            android:lines="2"
				            android:scrollHorizontally="false"
				            android:maxLines="2"
				            android:maxWidth="200sp" />
				    </TableRow>
		       	    <Button android:id="@+id/save"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="@string/saveButtonLabel" />
	        	</TableLayout>
        	</ScrollView>
        </FrameLayout>
    </LinearLayout>
</TabHost>